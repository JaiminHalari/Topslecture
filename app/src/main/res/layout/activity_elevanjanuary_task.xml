<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ElevanjanuaryTask"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:background="#0021FB"
        android:padding="25dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Result"
            android:id="@+id/text_result_id" />

    </LinearLayout>

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:padding="25dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Seekbar"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:layout_marginBottom="15dp" />

                <SeekBar
                    android:min="0"
                    android:max="100"
                    android:id="@+id/seekbar_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:padding="25dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RadiButtons"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:layout_marginBottom="15dp" />

                <RadioGroup android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:id="@+id/radigroup_id">

                    <RadioButton
                        android:text="Male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radiobutton_first_id" />

                    <RadioButton
                        android:text="Female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radiobutton_second_id" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="25dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="Checkbox"
                    android:textColor="#000000"
                    android:textSize="25dp" />

                <CheckBox
                    android:id="@+id/checkbox_first_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First" />

                <CheckBox
                    android:id="@+id/checkbox_Second_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Second" />

                <CheckBox
                    android:id="@+id/checkbox_Third_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Third" />

            </LinearLayout>

            <LinearLayout
                android:padding="25dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Switch"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:layout_marginBottom="15dp" />

                <Switch
                    android:checked="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch_id" />

            </LinearLayout>

            <LinearLayout
                android:padding="25dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ratinbar"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:layout_marginBottom="15dp" />

                <RatingBar
                    android:layout_gravity="center"
                    android:max="5"
                    android:id="@+id/ratingbar_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>






